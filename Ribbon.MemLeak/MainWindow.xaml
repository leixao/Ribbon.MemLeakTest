<Window x:Class="Ribbon.MemLeak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ribbon.MemLeak"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel >

        <Button Content="Create Memory Leak Window" Click="CreateMemoryLeakWindow"/>

        <Button Content="Create Normal Window (without Fluent:IconPresenter)" Click="CreateNormalWindow"/>

        <Button Content="Create Normal1 Window (without Command)" Click="CreateNormal1Window"/>

        <Button Content="Create Normal2 Window (Command = null)" Click="CreateNormal2Window"/>

        <Button Content="GC Collect" Click="GCCollect"/>

    </StackPanel>
</Window>
